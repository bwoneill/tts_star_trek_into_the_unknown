<Image id = "D" image = "https://raw.githubusercontent.com/bwoneill/tts_star_trek_into_the_unknown/v1.1.0/assets/tools/wake_tracker/d.png"
        position = "-26 45 -6"/>
<Image id = "E" image = "https://raw.githubusercontent.com/bwoneill/tts_star_trek_into_the_unknown/v1.1.0/assets/tools/wake_tracker/e.png"
        position = "26 45 -6"/>
