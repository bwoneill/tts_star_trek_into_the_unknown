<!-- Xml UI. See documentation: https://api.tabletopsimulator.com/ui/introUI/ -->

<Button 
    onClick = "drawFeatureRange"
    width = "100"
    height = "25"
    position = "-50 475 0"
    tooltip = "Draw system borders and 2&quot;, 4&quot;, and 6&quot; range on features on the board"
    tooltipPosition = "Below">
    Draw Ranges
</Button>

<Button onClick = "clearFeatureRange"
    width = "100"
    height = "25"
    position = "50 475 0">
    Clear
</Button>
<VerticalLayout width = "48" height = "240" rectAlignment = "MiddleRight">
    <Button onClick = "drawSystemBorders"
        image = "https://raw.githubusercontent.com/bwoneill/tts_star_trek_into_the_unknown/v0.14_purple_data/assets/ui/draw_system_borders.png"
        tooltip = "Draw system borders" tooltipPosition = "Left">
    </Button>
    <Button onClick = "clearSystemBorders"
        image = "https://raw.githubusercontent.com/bwoneill/tts_star_trek_into_the_unknown/v0.14_purple_data/assets/ui/clear_system_borders.png"
        tooltip = "Clear system borders" tooltipPosition = "Left">
    </Button>
    <Button onClick = "spawnSolitary"
        image = "https://raw.githubusercontent.com/bwoneill/tts_star_trek_into_the_unknown/v0.14_purple_data/assets/ui/solitary.png"
        tooltip = "Solitary setup" tooltipPosition = "Left">
    </Button>
    <Button onClick = "spawnHelix"
        image = "https://raw.githubusercontent.com/bwoneill/tts_star_trek_into_the_unknown/v0.14_purple_data/assets/ui/helix.png"
        tooltip = "Helix setup" tooltipPosition = "Left">
    </Button>
    <Button onClick = "spawnTrinary"
        image = "https://raw.githubusercontent.com/bwoneill/tts_star_trek_into_the_unknown/v0.14_purple_data/assets/ui/trinary.png"
        tooltip = "Trinary setup" tooltipPosition = "Left">
    </Button>
</VerticalLayout>