    <Button 
        onClick = "drawFeatureRange"
        tooltip = "Draw 2&quot;, 4&quot;, and 6&quot; range on features on the board"
        tooltipPosition = "Below">
        Draw Ranges
    </Button>
    <Button onClick = "clearFeatureRange">
        Clear
    </Button>
</HorizontalLayout>

