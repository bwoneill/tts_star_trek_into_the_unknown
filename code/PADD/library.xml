<Panel id = "library" width = "1100" height = "800" position = "-135 0 -30" color = "Black" active = "false">
    <Text fontSize = "48" offsetXY = "0 375">Object Library</Text>
    <Button class = "back" onClick = "close(library)"/>
    <Button id = "librarySpawn" onClick = "librarySpawn" text = "Spawn" fontSize = "32" color = "Orange" height = "50" width = "150"
            rectAlignment = "UpperRight" interactable = "false"/>
    <Panel rectAlignment = "UpperLeft" offsetXY = "0 -50">
        <!--Side Panel-->
        <Panel height = "750" width = "400" color = "Black" rectAlignment = "UpperLeft">
            <!--Search bar-->
            <InputField id = "searchField" onEndEdit = "librarySearch" height ="50" width = "400" fontSize = "32" rectAlignment = "UpperLeft"/>
            <!--Search results panel-->
            <Panel height = "700" width = "400" offsetXY = "0 -50" rectAlignment = "UpperLeft">
                <VerticalScrollView height = "700" width = "400" color = "Black" scrollSensitivity = "50" rectAlignment = "UpperLeft">
                    <Panel id = "searchScrollPanel" height = "700">
                        <GridLayout id = "searchResults" cellSize = "400 50" color = "Black">
                            <Text fontSize = "28" alignment = "LowerLeft">None</Text>
                        </GridLayout>
                    </Panel>
                </VerticalScrollView>
            </Panel>
        </Panel>
        <!--Main Panel-->
        <Panel height = "750" width = "700" offsetXY = "400 0" rectAlignment = "UpperLeft">
            <Image id = "cardFront" preserveAspect = "True" rectAlignment = "MiddleLeft" width = "350" active = "false"/>
            <Image id = "cardBack" preserveAspect = "True" rectAlignment = "MiddleRight" width = "350" active = "false"/>
            <Image id = "auxFront" preserveAspect = "True" rectAlignment = "UpperCenter" height = "375" active = "false"/>
            <Image id = "auxBack" preserveAspect = "True" rectAlignment = "LowerCenter" height = "375" active = "false"/>
            <Image id = "shipBoard" preserveAspect = "True" rectAlignment = "UpperLeft" width = "700" active = "false"/>
            <Image id = "shipImage" preserveAspect = "True" rectAlignment = "LowerRight" width = "260" active = "false"/>
            <Text id = "libraryText" fontSize = "32" alignment = "MiddleLeft"/>
        </Panel>
    </Panel>
</Panel>